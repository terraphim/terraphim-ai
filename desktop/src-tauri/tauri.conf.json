{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Terraphim Desktop",
  "version": "0.3.0",
  "identifier": "com.terraphim.ai.desktop",
  "build": {
    "beforeDevCommand": "yarn run dev",
    "beforeBuildCommand": "yarn run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Terraphim AI",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../default/**/*",
      "../public/assets/bulmaswatch/**/*.css"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/terraphim/terraphim-ai/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "PLACEHOLDER_PUBLIC_KEY"
    },
    "systemTray": {
      "iconPath": "icons/icon.png"
    }
  }
}
