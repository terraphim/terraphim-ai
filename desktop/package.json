		},
		"rollup-plugin-css-only": {
			"optional": true
		},
		"rollup-plugin-terser": {
			"optional": true
		},
		"svelma": {
			"optional": true
		},
		"svelte-jsoneditor": {
			"optional": true
		},
		"svelte-markdown": {
