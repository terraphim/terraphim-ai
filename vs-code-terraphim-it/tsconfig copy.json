{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"lib": [
			"ES2022", "dom", "es6", "es5", "dom.iterable", "scripthost",
			"ESNext"
		  ],
		  "allowJs": true,
		  "skipLibCheck": true,
		  "esModuleInterop": false,
		  "allowSyntheticDefaultImports": true,
		  "strict": true,
		  "forceConsistentCasingInFileNames": true,
		  "moduleResolution": "Node",
		  "noEmit": false,
		"noEmitOnError": false,
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "../",
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", ".vscode-test"]
}