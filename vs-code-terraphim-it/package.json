{
  "name": "terraphim-it",
  "displayName": "Terraphim It",
  "description": "Apply Current Terraphim AI role to the current text",
  "version": "0.0.3",
  "publisher": "applied-knowledge-systems",
  "private": true,
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.terraphimCommand",
        "title": "Terraphim IT"
      },
      {
        "command": "extension.terraphimAIAutocomplete",
        "title": "Terraphim AI Autocomplete"
      }
    ],
    "configuration": {
      "title": "Terraphim IT",
      "properties": {
        "terraphim.agent": {
          "type": "string",
          "default": "",
          "description": "Agent ID for Terraphim IT"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npx tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "npx tsc -watch -p ./",
    "update-ontologies": "npx ad-generate ontologies",
    "build-rust": "wasm-pack build rust-lib --target nodejs"
  },
  "devDependencies": {
    "@types/node": "^20.16.10",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@tomic/lib": "^0.4.0"
  }
}
