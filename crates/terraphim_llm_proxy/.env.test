# E2E Test Environment Variables
# Uses existing environment variables or 1Password CLI for secrets

# Proxy API Key (generate if not exists, or use existing)
export PROXY_API_KEY=${ANTHROPIC_API_KEY:-sk_test_proxy_e2e_validation_key_12345678901234567890}

# Provider API Keys - Use existing environment variables
export DEEPSEEK_API_KEY=${DEEPSEEK_API_KEY:-""}
export OPENROUTER_API_KEY=${OPENROUTER_API_KEY:-""}
export ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY:-""}

# Logging
export RUST_LOG=info

# Test configuration
export TEST_PROXY_URL=http://127.0.0.1:3456
export TEST_TIMEOUT=30

echo "Environment configured:"
echo "  PROXY_API_KEY: ${PROXY_API_KEY:0:20}..."
echo "  DEEPSEEK_API_KEY: ${DEEPSEEK_API_KEY:+SET}"
echo "  OPENROUTER_API_KEY: ${OPENROUTER_API_KEY:+SET}"
echo "  ANTHROPIC_API_KEY: ${ANTHROPIC_API_KEY:+SET}"
